# Обязательные параметры
# TELEGRAM_TOKEN — токен Telegram-бота из BotFather
TELEGRAM_TOKEN=

# Необязательные параметры (LLM / ответы)
# OPENAI_BASE_URL — базовый URL совместимого OpenAI API (например, https://foundation-models.api.cloud.ru/v1)
OPENAI_BASE_URL=
# OPENAI_API_KEY — API-ключ провайдера
OPENAI_API_KEY=
# OPENAI_ORGANIZATION — идентификатор организации (если провайдер требует)
OPENAI_ORGANIZATION=
# OPENAI_RESPONSE_MODEL — идентификатор модели для ответов (например, openai/gpt-oss-120b)
OPENAI_RESPONSE_MODEL=

# Необязательные параметры (эмбеддинги / Ollama)
# EMBEDDINGS_MODEL — модель эмбеддингов (например, qwen3-embedding:4b)
EMBEDDINGS_MODEL=
# EMBEDDINGS_ENDPOINT — полный endpoint embeddings API Ollama (например, http://ollama:11434/api/embeddings)
EMBEDDINGS_ENDPOINT=

# Необязательные параметры (доступ)
# ALLOWED_USERS — список Telegram ID через запятую (например, 12345,67890)
ALLOWED_USERS=

# Необязательные параметры (веб-панель)
# WEB_APP_PUBLIC_URL — публичный URL страницы настроек, отображаемый в сообщениях бота
WEB_APP_PUBLIC_URL=

# Параметры хранилища (только из .env, не настраиваются через веб)
# VECTOR_STORE_PATH — путь к данным Chroma
VECTOR_STORE_PATH=/data/chroma
# CHUNK_SIZE — размер чанка текста
CHUNK_SIZE=800
# CHUNK_OVERLAP — перекрытие между чанками
CHUNK_OVERLAP=200
# RETRIEVAL_TOP_K — количество документов при поиске
RETRIEVAL_TOP_K=4